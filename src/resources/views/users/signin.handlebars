
<form class='form-center shadow-sm p-3 rounded' method='POST' action='/users/signin' style='background-color: {{content.colorForm}}'>
  <h3 style='margin-top:-5px'>Đăng nhập<span class="material-icons-two-tone">login</span></h3>
  <div class="form-group ">
    <label for="exampleInputEmail1"><span class="material-icons-two-tone">alternate_email</span>Email</label>
    <input type="email" class="form-control" id="email" name='email' aria-describedby="emailHelp" placeholder="Email của bạn">
  </div>
  <div class="form-group ">
    <label for="exampleInputPassword1"><span class="material-icons-two-tone">password</span>Mật khẩu</label>
    <input type="password" class="form-control" id="password" name='password' placeholder="Mật khẩu">
  </div>
   <small id="emailHelp" class="form-text text-muted"><a href='#'>Bạn quên mật khẩu?</a></small>
  <div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Ghi nhớ đăng nhập</label>
  </div>
  <button type="submit" class="btn btn-info" style='margin-top:5px'>Đăng nhập</button>
</form>