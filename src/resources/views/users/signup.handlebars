
<form method='POST' action='/users/signup' class='form-radius shadow-sm p-3 rounded' enctype="multipart/form-data" style='background-color: {{content.colorForm}}'>
    <h3 style='margin-top:-5px'>Tạo tài khoản</h3>
    <div class='form-row'>
        <div class="form-group col-md-6">
        <label for="inputAddress2">Họ tên đầy đủ</label>
        <input type="text" class="form-control" id="fullname" name='fullName'  pattern="(?:[A-Z]\p{L}+ ){1,3}[A-Z]\p{L}+" title='Nhập đầy đủ họ tên và in hoa đầu câu, không sử dụng ký tự, số.' placeholder="Vui lòng nhập đầy đủ họ tên" required>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Số căn cước công dân</label>
      <input type="text" class="form-control" id="ID" name='ID' pattern="^\d+$" title='Chỉ nhập số' placeholder="Nhập số căn cước/CMND" required>
    </div>
    </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Email</label>
      <input type="email" class="form-control" id="email" name='email' placeholder="Nhãy nhập Email" title='Nhập đúng định dạng email' pattern="^([0-9a-zA-Z]([-.\w]*[0-9a-zA-Z])*@([0-9a-zA-Z][-\w]*[0-9a-zA-Z]\.)+[a-zA-Z]{2,9})$" required>
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Mật khẩu</label>
      <input type="password" class="form-control" id="password" name='password' pattern="[a-zA-Z0-9!@#$%^&*]{6,}" title="Mật khẩu từ 6 ký tự, không phân biệt chữ thường, chữ hoa, số, hoặc một số ký tự đặc biệt &#013; như '!', '@', '#', '$', '%', '^', '&' '*'." placeholder="Nhập mật khẩu" required>
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Địa chỉ thường trú</label>
    <input type="text" class="form-control" id="address" name='address' placeholder="Địa chỉ của bạn" required>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
        <label for="inputCity">Ngày sinh</label>
        <input type="date" class="form-control" id="dateofBirth" name='dateofBirth' min="1980-01-01" max="2050-12-31" required>
    </div>
    <div class="form-group col-md-4">
        <label for="inputCity">Số điện thoại</label>
        <input type="text" class="form-control" id="phoneNumber" name='phoneNumber' pattern='\+?(0|84)\d{9}' title='Nhập đúng định dạng số thuê bao Việt Nam' placeholder="Nhập số điện thoại" required>
    </div>
    <div class="form-group col-md-2">
      <label for="inputZip">Avatar</label>
      <input type="file" class="form-control" id="avatar" name='avatar'>
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck" required>
      <input type='hidden' value='Salesman' name='role'>
      <label class="form-check-label" for="gridCheck">
        Đồng ý với các điều khoản
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-info">Tạo tài khoản</button>
</form>