<div class="mt-4 shadow-sm p-3 rounded" style='background-color: {{content.colorForm}}'>
    <h3><span class="material-icons-two-tone md-36">add_business</span>Đăng sản phẩm</h3>
    <form method="POST" action='/items/store' enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Tên sản phẩm</label>
                <input type="text" class="form-control" id="name" name='name' >
            </div>
            <div class="form-group col-md-3">
                <label>Hãng</label>
                <select class="custom-select" id="inputGroupSelect01"  id='brand' name='brand' required>
                    <option selected></option>
                    <option value="Apple">Apple</option>
                    <option value="Samsung">Samsung</option>
                    <option value="Xiaomi">Xiaomi</option>
                    <option value="OnePlus">OnePlus</option>
                    <option value="Huawei">Huawei</option>
                    <option value="Vsmart">Vsmart</option>
                    <option value="Nokia">Nokia</option>
                    <option value="Oppo">Oppo</option>
                    <option value="Vivo">Vivo</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label >Khoảng giá</label>
                <select class="custom-select" id="priceRange" name='priceRange' required>
                    <option selected></option>
                    <option value="dưới 5 triệu">dưới 5 triệu</option>
                    <option value="5-10 triệu">5-10 triệu</option>
                    <option value="10-15 triệu">10-15 triệu</option>
                    <option value="15-20 triệu">15-20 triệu</option>
                    <option value="trên 20 triệu">trên 20 triệu</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label >Hệ điều hành</label>
                <select class="custom-select" id="OS" name='OS' required>
                    <option selected></option>
                    <option value="Android">Android</option>
                    <option value="IOS">IOS</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label >RAM</label>
                <select class="custom-select" id="RAM" name='RAM' required>
                    <option selected></option>
                    <option value="4">4GB</option>
                    <option value="6">6GB</option>
                    <option value="8">8GB</option>
                    <option value="12">12GB</option>
                    <option value="16">16GB</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label >ROM</label>
                <select class="custom-select" id="ROM" name='ROM' required>
                    <option selected></option>
                    <option value="32">32GB</option>
                    <option value="64">64GB</option>
                    <option value="128">128GB</option>
                    <option value="256">256GB</option>
                    <option value="512">512GB</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label >Loại</label>
                <select class="custom-select" id="type" name='type' required>
                    <option selected></option>
                    <option value="Điện thoại phổ thông">Điện thoại phổ thông</option>
                    <option value="Điện thoại cao cấp">Điện thoại cao cấp</option>
                    <option value="Gaming Phone">Gaming Phone</option>
                </select>
            </div>
        </div>
            
        <div class="mb-3" style='margin-top:10px'>
            <label >Mô tả sản phẩm</label>
            <textarea class="form-control" id="description" name='description' style='height: 180px' placeholder="Thêm 5 dòng, mỗi dòng khoảng 20 ký tự" ></textarea>
        </div>
        <div class="mb-3">
            <label >Chi tiết sản phẩm</label>
            <textarea class="form-control toHTML" id="detail" id="mytextarea" name='detail' style='height: 300px' placeholder="Mỗi đề mục cách nhau 2 dấu xuống hàng" ></textarea>
        </div>
        <div class="mb-3">
            <label >Hình ảnh</label>
            <input type="file" class="form-control" id="image" name='image' required>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label >Video ID</label>
                <input type="text" class="form-control" id="posterImg" name='posterImg' required>
            </div>
            <div class="form-group col-md-3">
                <label >Giá khuyến mãi</label>
                <input type="text" class="form-control" pattern="^\d+$" title='Chỉ nhập số' id="price" name='price' required>
            </div>
            <div class="form-group col-md-3">
                <label >Giá gốc</label>
                <input type="text" class="form-control" pattern="^\d+$" title='Chỉ nhập số' id="priceDel" name='priceDel' required>
            </div>
            <div class="form-group col-md-3">
                <label >Dẫn mục (slug)</label>
                <input type="text" class="form-control" id="slug" name='slug' placeholder="Tên điện thoại, cách nhau bởi dấu '-'" required>
            </div>
        </div>
        
        
        <button type="submit" class="btn btn-primary btn-lg btn-block"><span class="material-icons">save</span>Thêm sản phẩm</button>
    </form>
</div>
